  <name>{{conf.exec_filename}}</name>

  <author>CM</author>

  <description/>

  <features>
    <auto_vectorise/>
    <benchmark/>
    <bing/>
    <chunked_output size="100MB"/>
    <!-- <fftw plan="exhaustive"/> -->
    <fftw plan="exhaustive" threads="24"/>
    <openmp threads="24"/>

    <globals><![CDATA[
    {% for key, value in conf.globals.items() %}
    real {{key}} = {{value}};
    {% endfor %}
	]]></globals>
  </features>

